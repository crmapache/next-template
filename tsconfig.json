{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],

      "@core": ["./src/components/core"],
      "@core/*": ["./src/components/core/*"],

      "@features": ["./src/components/features"],
      "@features/*": ["./src/components/features/*"],

      "@shared": ["./src/components/shared"],
      "@shared/*": ["./src/components/shared/*"],

      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],

      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],

      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],

      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],

      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
